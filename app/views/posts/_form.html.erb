<% content_for :use_ do %>
<% if @post.errors.full_messages.any? %>
<ul>
	<% @post.errors.full_message.each do |error| %>
	<li style="color: red bold;"><%= error %></li>
	<% end%>
</ul>
<% end %>


<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, placeholder: "Enter post title" %>
	</p>
		<p>
		<%= f.label :post_body %>
		<%= f.text_field :post_body, placeholder: "Enter post body" %>
	</p>
	<p>
		<%= f.submit %>
	</p>

	<% end %>
<% end %>