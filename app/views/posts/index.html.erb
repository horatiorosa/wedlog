<h1>List of all posts</h1>

<table>
  <tr>
	<td>Title</td>
	<td>Post body</td>
	<td>Username</td>
	<td>Posted on</td>
	</tr>	
	<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title.truncate(60), post_path(post.id) %></td>
    <td><%= post.post_body.truncate(60) %></td>

    <td><%= post.user.username%></td>		
    <td><%= post.created_at.to_date.strftime("%m/%d/%Y") %></td>
    <% end %>
  </tr>

</table>



