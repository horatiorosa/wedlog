<h1>Recent Posts</h1>

<table>
  <tr>
	<td>Title</td>
	<td>Post body</td>
	<td>Username</td>
	<td>Posted on</td>
	</tr>	
	<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title.truncate(60), post_path(post.id) %></td>
    <td><%= post.post_body.truncate(60) %></td>

    <td><%= post.user.username%></td>		
    <td><%= post.created_at.to_date.strftime("%m/%d/%Y") %></td>
    <% end %>
  </tr>
</table>
<% if current_user %>
<h5>Enter a  <%=link_to "New Post",  new_post_path %></h5>

<% else %>
    <h5><%= link_to 'Login', login_path %> to post or comment.</h5><br>
    <h5><%= link_to "Register", new_user_path %></h5>

  
<% end %>




