<h1>Wed  Posts</h1>

<% if @post.errors.any? %>
	<% @post.errors.full_message.each do |error| %>
	<p style="color: red bold;"><% error %></p>
	<% end%>
<% end %>

<h1><%= @post.title %></h1>
<p><%= @post.post_body %></p>
		<% if current_user == @user%>
				<p><%= link_to 'Edit your post', edit_post_path %></p>
				<p><%= link_to 'Delete your post', post_path(@post.id), method: :delete %></p>
		<% end %>

<hr>
<% @post.comments.each do |comment| %>
	<p><%= comment.comment_body %> (<%= comment.user.username %>)</p>
<%end %>
<hr>
<% if current_user %>
	<h4>Post a comment below:</h4>
			<%= form_for [@post, @comment] do |f| %>
			<%= f.text_area :comment_body, placeholder: "Enter comment here" %><br>
		<%= f.submit %>
<% end %>
<% else %>
	<h5><%= link_to 'Login', login_path %> to post or comment.</h5>
	
<% end %>



