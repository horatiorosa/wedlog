<% content_for :use_login do %>

<h1>Please Log in below or Clcik <%= link_to "here", new_user_path %> to Register.</h1>

<div class="login_form">
<%= form_tag '/login', method: :post do %>
<p  class="pform">
	<%= label_tag :email %>
	<%= email_field_tag :email %>
</p>
<p class="pform">
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</p>
<p>
	<%= submit_tag :Login, class: 'submit' %>
	
</p>
<% end %>

</div>
<% end %>


